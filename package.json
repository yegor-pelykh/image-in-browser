{
  "name": "image-in-browser",
  "version": "1.0.1",
  "description": "Package for converting images between different formats that works in the browser (no need for server Node.js)",
  "author": "Yegor Pelykh <yegor.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yegor-pelykh/image-in-browser"
  },
  "main": "lib/index.js",
  "files": [
    "lib/**/*.js",
    "lib/**/*d.ts"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "format-src": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" --no-error-on-unmatched-pattern",
    "format-test": "prettier --write \"test/**/*.ts\" \"test/**/*.js\" --no-error-on-unmatched-pattern",
    "eslint": "eslint --fix",
    "format": "npm run format-src && npm run format-test && npm run eslint",
    "test": "jest",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/uzip": "^0.20201231.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.1.2",
    "prettier": "2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "uzip": "^0.20201231.0"
  }
}
